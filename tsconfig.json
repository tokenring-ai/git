{
 "compilerOptions": {
  "target": "ES2022",
  "module": "NodeNext",
  "moduleResolution": "NodeNext",
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "strict": true,
  "allowJs": true,
  "checkJs": true,
  "allowImportingTsExtensions": true,
  "types": [
   "bun",
   "vitest"
  ],
  "outDir": "dist",
  "rootDir": "."
 },
 "include": [
  "**/*.ts"
 ],
 "exclude": [
  "node_modules",
  "dist-ts",
  "**/vitest.config.*"
 ]
}
